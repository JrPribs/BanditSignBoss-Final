extends layout

block content
	div.page-header
		h1 #{campaign.title} Details
			div.pull-right
				a.campaign-button.btn(href="/upload/#{campaignId}") Upload Photo(s)
				if campaign.photos
					a.campaign-button.btn(href="/campaign/#{campaignId}/view-map") View Campaign Map
	div.well
		ul.list-group.pull-left
			li.list-group-item.h3 Campaign created on #{campaign.createDate} @ #{campaign.createTime}
			li.list-group-item.h3 Campaign created by: #{campaign.user.name}
			li.list-group-item.h3 Photos currently in campaign: #{campaign.photoCount}
		if campaign.routes
			ul.list-group.pull-right
			for route in campaign.routes
				li.list-group-item.h3 route.title
	if campaign.photos
		for photo in campaign.photos
			li.pull-left
					div.thumbnail
						img.points(src="/images/#{photo.file}" width="200px")
						div #{photo.caption}
